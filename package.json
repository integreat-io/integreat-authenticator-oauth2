{
  "name": "integreat-authenticator-oauth2",
  "version": "0.1.3",
  "description": "OAuth 2.0 authenticator for Integreat",
  "author": "Kjell-Morten Bratsberg Thorsen <post@kjellmorten.no>",
  "license": "ISC",
  "keywords": [
    "integreat",
    "oauth2",
    "authentication"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "test": "nyc --reporter=text-summary ava",
    "test:watch": "npm run dev",
    "test:inspect": "node --inspect node_modules/ava/profile.js",
    "dev": "ava --watch",
    "build": "tsc",
    "prepare": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nyc:report": "nyc report",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "sources": [
      "src/**/!(*.test).ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/*.test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/integreat-io/integreat-authenticator-oauth2.git"
  },
  "bugs": {
    "url": "https://github.com/integreat-io/integreat-authenticator-oauth2/issues"
  },
  "homepage": "https://github.com/integreat-io/integreat-authenticator-oauth2#readme",
  "engines": {
    "node": ">= 8.6",
    "npm": ">= 5.4"
  },
  "dependencies": {
    "integreat-adapter-form": "^0.1.0"
  },
  "devDependencies": {
    "@types/nock": "^10.0.3",
    "ava": "^2.1.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.4",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.2"
  }
}
